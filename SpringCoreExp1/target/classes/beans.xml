<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xmlns:aop="http://www.springframework.org/schema/aop"

	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">


<!-- //default scope is singleton -->
	<bean id="bd1" class="com.test.BookDetails"> 
		<property name="pages" value="420"></property>
		<property name="publisher" value="Meow"></property>
		<property name="pyear" value="2026"></property>
	</bean>
	
	<bean id="bd2" class="com.test.BookDetails"> 
		<property name="pages" value="900"></property>
		<property name="publisher" value="Samm"></property>
		<property name="pyear" value="2023"></property>
	</bean>
	
	<bean id="bk" class="com.test.Book" scope="singleton" autowire="default"> 
		<property name="id" value="101"></property>
		<property name="name" value="Java Notes"></property>
		<property name="author" value="sandy"></property>
		<property name="price" value="2345"></property>
		
		<property name="listbd">
			<list>
				<ref bean="bd1"/>
				<ref bean="bd2"/>
			</list>
		</property>
	</bean>
	
	
	

</beans>


